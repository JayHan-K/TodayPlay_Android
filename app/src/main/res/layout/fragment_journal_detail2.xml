<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hidden_top_part"
        android:background="#252525"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="34dp"
        android:paddingBottom="34dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/hidden_back_btn"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:background="@drawable/perform_info_back_icon"
            app:layout_constraintStart_toStartOf="@id/hidden_top_part"
            app:layout_constraintTop_toTopOf="@id/hidden_top_part"/>
        <TextView
            android:id="@+id/perform_subtitle_tv"
            android:text="모든 이야기의 시작이 된 이야기"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/hidden_back_btn"
            app:layout_constraintTop_toTopOf="@id/hidden_top_part"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/perform_title_tv"
            android:text="오이디푸스 I"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            app:layout_constraintStart_toEndOf="@id/hidden_back_btn"
            app:layout_constraintTop_toBottomOf="@id/perform_subtitle_tv"
            android:layout_marginTop="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_part"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#252525"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="43dp"
                android:paddingBottom="20dp">
                <ImageButton
                        android:id="@+id/back_btn"
                        android:layout_width="16dp"
                        android:layout_height="17dp"
                        android:background="@drawable/perform_info_back_icon"
                        app:layout_constraintStart_toStartOf="@id/top_part"
                        app:layout_constraintTop_toTopOf="@id/top_part"
                        android:layout_marginLeft="22dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/top_part"
                        app:layout_constraintStart_toStartOf="@id/top_part">
                        <TextView
                            android:id="@+id/editor_name_tv"
                            android:text="by.제인 에디터"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="@id/constraintLayout1"
                            app:layout_constraintTop_toTopOf="@id/constraintLayout1"
                            app:layout_constraintBottom_toBottomOf="@id/constraintLayout1"/>
                        <ImageView
                            android:id="@+id/bookmark_iv"
                            android:src="@drawable/journal_bookmark_icon_white"
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="14dp"
                            app:layout_constraintStart_toEndOf="@id/editor_name_tv"
                            app:layout_constraintTop_toTopOf="@id/constraintLayout1"
                            app:layout_constraintBottom_toBottomOf="@id/constraintLayout1"/>
                        <TextView
                            android:id="@+id/num_bookmarks_tv"
                            android:text="4"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/bookmark_iv"
                            app:layout_constraintTop_toTopOf="@id/constraintLayout1"
                            app:layout_constraintBottom_toBottomOf="@id/constraintLayout1"
                            android:layout_marginLeft="4dp"/>
                        <ImageView
                            android:id="@+id/comment_iv"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/journal_comment_icon"
                            app:layout_constraintStart_toEndOf="@id/num_bookmarks_tv"
                            app:layout_constraintTop_toTopOf="@id/constraintLayout1"
                            app:layout_constraintBottom_toBottomOf="@id/constraintLayout1"/>
                        <TextView
                            android:id="@+id/num_comment_tv"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            android:text="24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/comment_iv"
                            app:layout_constraintTop_toTopOf="@id/constraintLayout1"
                            app:layout_constraintBottom_toBottomOf="@id/constraintLayout1"
                            android:layout_marginLeft="4dp"/>
                        <ImageView
                            android:id="@+id/eye_icon"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/journal_eye_icon"
                            app:layout_constraintTop_toTopOf="@id/constraintLayout1"
                            app:layout_constraintBottom_toBottomOf="@id/constraintLayout1"
                            app:layout_constraintStart_toEndOf="@id/num_comment_tv"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:id="@+id/num_views_tv"
                            android:text="3만"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/constraintLayout1"
                            app:layout_constraintBottom_toBottomOf="@id/constraintLayout1"
                            app:layout_constraintStart_toEndOf="@id/eye_icon"
                            android:layout_marginLeft="4dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/webview_part"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintTop_toBottomOf="@id/top_part"
                app:layout_constraintStart_toStartOf="parent">
                <WebView
                    android:id="@+id/jouranl_wv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/webview_part"
                    app:layout_constraintStart_toStartOf="@id/webview_part"/>
                <ImageButton
                    android:id="@+id/bookmark_btn"
                    android:background="@drawable/journal_bookmark_icon_white"
                    android:layout_width="26dp"
                    android:layout_height="42.3dp"
                    app:layout_constraintEnd_toEndOf="@id/webview_part"
                    android:layout_marginRight="24dp"
                    app:layout_constraintTop_toTopOf="@id/webview_part"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/gray_bottom_border"
                android:id="@+id/bookmark_comment_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/webview_part"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:paddingBottom="13.5dp">
                <ImageView
                    android:id="@+id/bookmark_icon"
                    android:src="@drawable/journal_bookmark_small_yellow"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    app:layout_constraintTop_toTopOf="@id/bookmark_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/bookmark_comment_part"
                    app:layout_constraintStart_toStartOf="@id/bookmark_comment_part"/>
                <TextView
                    android:id="@+id/num_bookmarks_tv2"
                    android:text="23"
                    android:textColor="#252525"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    app:layout_constraintStart_toEndOf="@id/bookmark_icon"
                    app:layout_constraintTop_toTopOf="@id/bookmark_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/bookmark_comment_part"/>
                <ImageView
                    android:id="@+id/comment_icon"
                    android:src="@drawable/journal_comment_small_yellow"
                    android:layout_width="12dp"
                    android:layout_height="12.6dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/num_bookmarks_tv2"
                    app:layout_constraintTop_toTopOf="@id/bookmark_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/bookmark_comment_part"/>
                <TextView
                    android:id="@+id/num_comment"
                    android:text="23"
                    android:textSize="12sp"
                    android:textColor="#252525"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/comment_icon"
                    app:layout_constraintTop_toTopOf="@id/bookmark_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/bookmark_comment_part"
                    android:layout_marginLeft="6dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/write_comment_part"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bookmark_comment_part"
                android:layout_marginTop="19.5dp">
                <EditText
                    android:id="@+id/write_comment_et"
                    android:layout_width="258dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_border_4dp_fefefe"
                    app:layout_constraintStart_toStartOf="@id/write_comment_part"
                    app:layout_constraintTop_toTopOf="@id/write_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/write_comment_part" />
                <Button
                    android:text="등록"
                    android:textColor="#252525"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_border_4dp_ffe34e"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="6dp"
                    app:layout_constraintStart_toEndOf="@id/write_comment_et"
                    app:layout_constraintEnd_toEndOf="@id/write_comment_part"
                    app:layout_constraintTop_toTopOf="@id/write_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/write_comment_part"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/journal_comment_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_comment_part">
            </androidx.recyclerview.widget.RecyclerView>
            <Button
                android:id="@+id/more_comment_btn"
                android:text="+  20개의 댓글 더 보기"
                android:textSize="14sp"
                android:textColor="#252525"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/journal_comment_rv"
                android:layout_marginTop="20dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_part"
                android:background="#252525"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/more_comment_btn"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">
                <TextView
                    android:id="@+id/recommend_journal_tv"
                    android:text="이런 저널은 어떠신가요?"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/bottom_part"
                    app:layout_constraintStart_toStartOf="@id/bottom_part"
                    android:layout_marginLeft="24dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommend_journal_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/bottom_part"
                    app:layout_constraintTop_toBottomOf="@id/recommend_journal_tv"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="6.8dp"
                    android:paddingRight="6.8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
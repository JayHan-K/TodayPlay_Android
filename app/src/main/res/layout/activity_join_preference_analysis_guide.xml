<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="36dp"
    android:paddingBottom="52dp">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_level_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="17dp"
                    android:src="@drawable/join_level3"
                    app:layout_constraintTop_toTopOf="@id/join_level_part"
                    app:layout_constraintBottom_toBottomOf="@id/join_level_part"
                    app:layout_constraintStart_toStartOf="@id/join_level_part"
                    app:layout_constraintEnd_toEndOf="@id/join_level_part"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/join_guide_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="36dp"
                android:layout_marginLeft="36dp"
                android:text="매일매일 '공연'하는 새로운 일상"
                android:textSize="20sp"
                android:textColor="#252525"
                app:layout_constraintTop_toBottomOf="@id/join_level_part"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="33dp"/>
            <TextView
                android:id="@+id/join_guide_subtitle_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘의 공연과 함께 \n오늘도 행복한 하루를 만들어가요."
                android:textSize="12sp"
                android:textColor="#252525"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/join_guide_title_tv"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/join_guide_iv"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/show_sample1"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/join_guide_subtitle_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="24dp"
                android:text="내 공연 취향 분석하기"
                android:textColor="#252525"
                android:textSize="16sp"
                android:background="@drawable/join_yellow_rounded_corner"
                app:layout_constraintTop_toBottomOf="@id/join_guide_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
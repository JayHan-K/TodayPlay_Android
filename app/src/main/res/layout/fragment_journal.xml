<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/title_part"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/title_part"
            app:layout_constraintBottom_toBottomOf="@id/title_part"
            app:layout_constraintLeft_toLeftOf="@id/title_part"
            app:layout_constraintRight_toRightOf="@id/title_part"
            android:text="오늘의 공연"
            android:textColor="#ffffff"
            android:textSize="20dp">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/notice_part"
                android:background="@drawable/notice_rounded_corner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/notice_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_notice"
                    app:layout_constraintTop_toTopOf="@id/notice_part"
                    app:layout_constraintLeft_toLeftOf="@id/notice_part"
                    app:layout_constraintRight_toLeftOf="@id/notice_tv"
                    app:layout_constraintBottom_toBottomOf="@id/notice_part"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/notice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="#2d2d2d"
                    android:text="2020 공연 문화 에티켓지키기"
                    app:layout_constraintTop_toTopOf="@id/notice_part"
                    app:layout_constraintLeft_toRightOf="@id/notice_iv"
                    app:layout_constraintRight_toLeftOf="@id/community_notice_more_bt"
                    app:layout_constraintBottom_toBottomOf="@id/notice_part"
                    android:layout_marginLeft="10dp"/>
                <Button
                    android:id="@+id/community_notice_more_bt"
                    android:textSize="14dp"
                    android:textColor="#2d2d2d"
                    android:text="...더보기"
                    android:background="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="@id/notice_part"
                    app:layout_constraintLeft_toRightOf="@id/notice_tv"
                    app:layout_constraintBottom_toBottomOf="@id/notice_part"
                    app:layout_constraintRight_toRightOf="@id/notice_part"
                    android:layout_marginRight="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/journal_list_rv_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="25dp"
                app:layout_constraintTop_toBottomOf="@id/notice_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintTop_toTopOf="@id/journal_list_rv_part"
                    app:layout_constraintStart_toStartOf="@id/journal_list_rv_part"
                    app:layout_constraintEnd_toEndOf="@id/journal_list_rv_part"
                    android:id="@+id/journal_rv"
                    android:layout_width="match_parent"
                    android:layout_height="110dp">
                </androidx.recyclerview.widget.RecyclerView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/journal_main_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/journal_list_rv_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <FrameLayout
                    android:id="@+id/journal_child_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/journal_main_part"
                    app:layout_constraintBottom_toBottomOf="@id/journal_main_part"
                    app:layout_constraintStart_toStartOf="@id/journal_main_part"
                    app:layout_constraintEnd_toEndOf="@id/journal_main_part">
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
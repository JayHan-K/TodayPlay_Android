<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525"
    android:paddingBottom="30dp">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/perform_intro_part"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="22dp"
                android:paddingTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/perform_staff_part">
                <TextView
                    android:id="@+id/intro_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공연 소개"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    app:layout_constraintTop_toTopOf="@id/perform_intro_part"
                    app:layout_constraintStart_toStartOf="@id/perform_intro_part"
                    android:layout_marginLeft="24dp" />
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/perform_iv"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="7dp"
                    android:src="@drawable/opera_5"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:layout_constraintStart_toStartOf="@id/perform_intro_part"
                    app:layout_constraintTop_toBottomOf="@id/intro_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:paddingLeft="30dp"
                    android:paddingBottom="25dp">
                    <TextView
                        android:id="@+id/perform_detail_sub_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모든 이야기의 시작이 된 이야기"
                        android:textColor="#ffffff"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/perform_detail_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오이디푸스I"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/play_like_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="작품이 괜찮다면 ♥︎"
                android:background="@drawable/rounded_border_4dp_252525"
                android:elevation="2dp"
                android:textColor="#ffffff"
                app:layout_constraintTop_toBottomOf="@id/perform_intro_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/perform_staff_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/play_like_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/perform_journal_part"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">
                <TextView
                    android:id="@+id/staff_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제작진"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    app:layout_constraintTop_toTopOf="@id/perform_staff_part"
                    app:layout_constraintStart_toStartOf="@id/perform_staff_part" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/staff_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/staff_tv"
                    app:layout_constraintStart_toStartOf="@id/perform_staff_part"
                    android:layout_marginTop="10.3dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/perform_journal_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/perform_staff_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingLeft="24dp">
                <TextView
                    android:id="@+id/journal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관련 저널"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    app:layout_constraintTop_toTopOf="@id/perform_journal_part"
                    app:layout_constraintStart_toStartOf="@id/perform_journal_part" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/journal_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/journal_tv"
                    app:layout_constraintStart_toStartOf="@id/perform_journal_part"
                    android:layout_marginTop="12dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
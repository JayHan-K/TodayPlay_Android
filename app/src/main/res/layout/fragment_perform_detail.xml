<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525"
    android:paddingBottom="30dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/perform_intro_part"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/perform_staff_part">
        <TextView
            android:id="@+id/intro_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공연 소개"
            android:textSize="12sp"
            android:textColor="#ffffff"
            app:layout_constraintTop_toTopOf="@id/perform_intro_part"
            app:layout_constraintStart_toStartOf="@id/perform_intro_part"
            android:layout_marginLeft="24dp" />
        <ImageView
            android:id="@+id/perform_iv"
            android:src="@drawable/opera_5"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="@id/perform_intro_part"
            app:layout_constraintTop_toBottomOf="@id/intro_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/perform_staff_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/perform_intro_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/perform_journal_part"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <TextView
            android:id="@+id/staff_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제작진"
            android:textSize="12sp"
            android:textColor="#ffffff"
            app:layout_constraintTop_toTopOf="@id/perform_staff_part"
            app:layout_constraintStart_toStartOf="@id/perform_staff_part" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/staff_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/staff_tv"
            app:layout_constraintStart_toStartOf="@id/perform_staff_part"
            android:layout_marginTop="10.3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/perform_journal_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/perform_staff_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="24dp"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/journal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관련 저널"
            android:textSize="12sp"
            android:textColor="#ffffff"
            app:layout_constraintTop_toTopOf="@id/perform_journal_part"
            app:layout_constraintStart_toStartOf="@id/perform_journal_part" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/journal_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/journal_tv"
            app:layout_constraintStart_toStartOf="@id/perform_journal_part"
            android:layout_marginTop="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
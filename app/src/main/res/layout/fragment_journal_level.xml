<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/hot_journal_cv"
                android:layout_width="wrap_content"
                android:layout_height="184dp"
                app:cardBackgroundColor="#252525"
                app:cardCornerRadius="8dp"
                android:elevation="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="18dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cv_part"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/hot_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:text="HOT 인기 저널"
                        android:textColor="#ffffff"
                        app:layout_constraintTop_toTopOf="@id/cv_part"
                        app:layout_constraintStart_toStartOf="@id/cv_part"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hot_journal_rv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="13dp"
                        app:layout_constraintTop_toBottomOf="@id/hot_tv"
                        app:layout_constraintStart_toStartOf="@id/cv_part"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hot_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/hot_journal_cv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="30dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/storyteller_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#252525"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp"
                android:elevation="20dp"
                app:layout_constraintTop_toBottomOf="@id/hot_rv"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/storyteller_part"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="12dp">
                    <TextView
                        android:id="@+id/storyteller_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당신을 위한 스토리텔러"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="@id/storyteller_part"
                        app:layout_constraintStart_toStartOf="@id/storyteller_part"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/storyteller_rv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/storyteller_tv"
                        app:layout_constraintStart_toStartOf="@id/storyteller_part"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hot_rv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/storyteller_cv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="30dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
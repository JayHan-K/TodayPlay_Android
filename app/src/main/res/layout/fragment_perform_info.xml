<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/perform_main_part"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tag_rv_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp">
                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="16dp"
                    android:layout_height="17dp"
                    android:src="@drawable/icon_pre"
                    app:layout_constraintTop_toTopOf="@id/perform_main_part"
                    app:layout_constraintBottom_toBottomOf="@id/perfrom_title_tv"
                    app:layout_constraintStart_toStartOf="@id/perform_main_part"
                    app:layout_constraintEnd_toStartOf="@id/perfrom_img"
                    android:layout_marginTop="39dp"
                    android:layout_marginRight="134dp"
                    android:layout_marginLeft="22dp"/>
                <ImageView
                    android:id="@+id/perfrom_img"
                    android:layout_width="162dp"
                    android:layout_height="202dp"
                    android:src="@drawable/poster_sample16"
                    app:layout_constraintTop_toTopOf="@id/perform_main_part"
                    app:layout_constraintStart_toStartOf="@id/perfrom_title_tv"
                    app:layout_constraintEnd_toEndOf="@id/perform_main_part"
                    app:layout_constraintBottom_toBottomOf="@id/perform_main_part"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="36dp" />
                <TextView
                    android:id="@+id/perfrom_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="122dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="6dp"
                    android:text="연극 라이어"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/rangking_tv"
                    app:layout_constraintEnd_toStartOf="@+id/perfrom_img"
                    app:layout_constraintStart_toStartOf="@id/perform_main_part"
                    app:layout_constraintTop_toTopOf="@id/back_btn" />
                <ImageView
                    android:id="@+id/heart_icon"
                    android:layout_width="13dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_heart_line"
                    app:layout_constraintStart_toStartOf="@id/perform_main_part"
                    app:layout_constraintEnd_toStartOf="@id/rangking_tv"
                    app:layout_constraintBottom_toBottomOf="@id/perform_main_part"
                    app:layout_constraintTop_toBottomOf="@id/perfrom_title_tv"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="24dp" />
                <TextView
                    android:id="@+id/rangking_tv"
                    android:textColor="#fed702"
                    android:text="찜 랭킹 21위"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/perfrom_img"
                    app:layout_constraintStart_toEndOf="@id/heart_icon"
                    app:layout_constraintBottom_toBottomOf="@id/perform_main_part"
                    app:layout_constraintTop_toBottomOf="@id/perfrom_title_tv"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginRight="69dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tag_rv_part"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/perform_main_part"
                app:layout_constraintBottom_toTopOf="@id/perform_tab_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tag_rv"
                    app:layout_constraintTop_toTopOf="@id/tag_rv_part"
                    app:layout_constraintBottom_toBottomOf="@id/tag_rv_part"
                    app:layout_constraintStart_toStartOf="@id/tag_rv_part"
                    app:layout_constraintEnd_toEndOf="@id/tag_rv_part"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.tabs.TabLayout
                app:tabTextAppearance="@style/tab_text"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorColor="#fed702"
                app:tabGravity="fill"
                app:tabSelectedTextColor="#fed702"
                app:tabTextColor="#ffffff"
                android:id="@+id/perform_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/tag_rv_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/perform_view_pager">
            </com.google.android.material.tabs.TabLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/perform_view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/perform_tab_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </androidx.viewpager.widget.ViewPager>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hidden_top_part"
        android:background="#252525"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="34dp"
        android:paddingBottom="34dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/hidden_back_btn"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:background="@drawable/perform_info_back_icon"
            app:layout_constraintStart_toStartOf="@id/hidden_top_part"
            app:layout_constraintTop_toTopOf="@id/hidden_top_part"/>
        <TextView
            android:id="@+id/perform_subtitle_tv"
            android:text="모든 이야기의 시작이 된 이야기"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/hidden_back_btn"
            app:layout_constraintTop_toTopOf="@id/hidden_top_part"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/perform_title_tv"
            android:text="오이디푸스 I"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            app:layout_constraintStart_toEndOf="@id/hidden_back_btn"
            app:layout_constraintTop_toBottomOf="@id/perform_subtitle_tv"
            android:layout_marginTop="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/hidden_top_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_part"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="42.3dp">
            <WebView
                android:id="@+id/jouranl_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/scroll_part"
                app:layout_constraintStart_toStartOf="@id/scroll_part"/>

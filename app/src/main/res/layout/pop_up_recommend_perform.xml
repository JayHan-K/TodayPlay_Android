<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_border_8dp_ffffff"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:paddingBottom="39dp">
    <TextView
        android:id="@+id/question_tv"
        android:text="이 작품을 다른 유저들에게\n추천하시겠어요?"
        android:textSize="14sp"
        android:textColor="#252525"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/question_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recommend_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/btn_part"
            app:layout_constraintStart_toStartOf="@id/btn_part"
            android:layout_marginTop="11dp">
            <ImageView
                android:id="@+id/recommend_icon"
                android:src="@drawable/recommend_charactor"
                android:layout_width="100dp"
                android:layout_height="132.1dp"
                app:layout_constraintTop_toTopOf="@id/recommend_btn"
                app:layout_constraintStart_toStartOf="@id/recommend_btn"
                app:layout_constraintEnd_toEndOf="@id/recommend_btn"/>
            <ImageView
                android:id="@+id/recomend_hover_iv"
                android:src="@drawable/write_review_recomend_icon_yellow"
                android:layout_width="86dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="@id/recommend_btn"
                app:layout_constraintEnd_toEndOf="@id/recommend_btn"
                app:layout_constraintTop_toBottomOf="@id/recommend_icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/not_recommend_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/btn_part"
            app:layout_constraintStart_toEndOf="@id/recommend_btn"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="11dp">
            <ImageView
                android:id="@+id/not_recommend_icon"
                android:src="@drawable/not_recommend_charactor"
                android:layout_width="100dp"
                android:layout_height="132.1dp"
                app:layout_constraintTop_toTopOf="@id/not_recommend_btn"
                app:layout_constraintStart_toStartOf="@id/not_recommend_btn"
                app:layout_constraintEnd_toEndOf="@id/not_recommend_btn"/>
            <ImageView
                android:id="@+id/not_recomend_hover_iv"
                android:src="@drawable/write_review_not_recomend_icon_gray"
                android:layout_width="86dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="@id/not_recommend_btn"
                app:layout_constraintEnd_toEndOf="@id/not_recommend_btn"
                app:layout_constraintTop_toBottomOf="@id/not_recommend_icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="36dp"
    android:paddingBottom="52dp">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_level_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="17dp"
                    android:src="@drawable/join_level1"
                    app:layout_constraintTop_toTopOf="@id/join_level_part"
                    app:layout_constraintBottom_toBottomOf="@id/join_level_part"
                    app:layout_constraintStart_toStartOf="@id/join_level_part"
                    app:layout_constraintEnd_toEndOf="@id/join_level_part"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_title_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_level_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="본인확인을 위해\n인증을 진행해주세요."
                    android:textSize="20sp"
                    android:textColor="#252525"
                    app:layout_constraintTop_toTopOf="@id/join_title_part"
                    app:layout_constraintStart_toStartOf="@id/join_title_part"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_terms_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_title_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/agree_part"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    app:layout_constraintTop_toTopOf="@id/join_terms_part"
                    app:layout_constraintStart_toStartOf="@id/join_terms_part">
                    <ImageButton
                        android:id="@+id/radio_btn"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/join_radio_unchecked"
                        app:layout_constraintTop_toTopOf="@id/agree_part"
                        app:layout_constraintStart_toStartOf="@id/agree_part"
                        app:layout_constraintBottom_toBottomOf="@id/agree_part"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/radio_btn"
                        app:layout_constraintTop_toTopOf="@id/agree_part"
                        app:layout_constraintBottom_toBottomOf="@id/agree_part"
                        android:text="본인 인증 서비스 약관 전체동의"
                        android:textSize="14sp"
                        android:textColor="#252525"
                        android:layout_marginLeft="10dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/terms1_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/agree_part"
                    app:layout_constraintStart_toStartOf="@id/join_terms_part"
                    app:layout_constraintEnd_toEndOf="@id/join_terms_part"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:id="@+id/terms1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/terms1_part"
                        app:layout_constraintStart_toStartOf="@id/terms1_part"
                        app:layout_constraintBottom_toBottomOf="@id/terms1_part"
                        android:text="휴대폰 본인 인증 서비스 이용약관 동의 (필수)"
                        android:textSize="12sp"
                        android:textColor="#252525"/>
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:background="@drawable/join_more_btn"
                        app:layout_constraintTop_toTopOf="@id/terms1_part"
                        app:layout_constraintEnd_toEndOf="@id/terms1_part"
                        app:layout_constraintBottom_toBottomOf="@id/terms1_part"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/terms2_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/terms1_part"
                    app:layout_constraintStart_toStartOf="@id/join_terms_part"
                    app:layout_constraintEnd_toEndOf="@id/join_terms_part"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/terms2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/terms2_part"
                        app:layout_constraintStart_toStartOf="@id/terms2_part"
                        app:layout_constraintBottom_toBottomOf="@id/terms2_part"
                        android:text="휴대폰 통신사 이용약관 동의 (필수)"
                        android:textSize="12sp"
                        android:textColor="#252525"/>
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:background="@drawable/join_more_btn"
                        app:layout_constraintTop_toTopOf="@id/terms2_part"
                        app:layout_constraintEnd_toEndOf="@id/terms2_part"
                        app:layout_constraintBottom_toBottomOf="@id/terms2_part"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/terms3_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/terms2_part"
                    app:layout_constraintStart_toStartOf="@id/join_terms_part"
                    app:layout_constraintEnd_toEndOf="@id/join_terms_part"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/terms3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/terms3_part"
                        app:layout_constraintStart_toStartOf="@id/terms3_part"
                        app:layout_constraintBottom_toBottomOf="@id/terms3_part"
                        android:text="개인정보 제공 및 이용 동의 (필수)"
                        android:textSize="12sp"
                        android:textColor="#252525"/>
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:background="@drawable/join_more_btn"
                        app:layout_constraintTop_toTopOf="@id/terms3_part"
                        app:layout_constraintEnd_toEndOf="@id/terms3_part"
                        app:layout_constraintBottom_toBottomOf="@id/terms3_part"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/terms4_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/terms3_part"
                    app:layout_constraintStart_toStartOf="@id/join_terms_part"
                    app:layout_constraintEnd_toEndOf="@id/join_terms_part"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/terms4_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/terms4_part"
                        app:layout_constraintStart_toStartOf="@id/terms4_part"
                        app:layout_constraintBottom_toBottomOf="@id/terms4_part"
                        android:text="고유식별정보 처리 (필수)"
                        android:textSize="12sp"
                        android:textColor="#252525"/>
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="24dp"
                        android:background="@drawable/join_more_btn"
                        app:layout_constraintTop_toTopOf="@id/terms4_part"
                        app:layout_constraintEnd_toEndOf="@id/terms4_part"
                        app:layout_constraintBottom_toBottomOf="@id/terms4_part"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_info_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_terms_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="43dp">
                <EditText
                    android:id="@+id/join_user_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#252525"
                    android:background="@null"
                    android:hint="이름"
                    app:layout_constraintTop_toTopOf="@id/user_info_part"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/border1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/join_user_name_et"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:background="@drawable/gray_bottom_border"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/join_user_birth_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColor="#252525"
                    android:hint="생년월일 6자리"
                    app:layout_constraintTop_toBottomOf="@id/border1"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:layout_marginTop="9dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/border2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/join_user_birth_et"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:background="@drawable/gray_bottom_border"
                    android:layout_marginTop="10dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/user_phone_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/border2"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:layout_marginTop="3dp">
                    <Spinner
                        android:id="@+id/telecom_spinner"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/user_phone_part"
                        app:layout_constraintStart_toStartOf="@id/user_phone_part"
                        app:layout_constraintBottom_toBottomOf="@id/user_phone_part"
                        android:textColor = "#252525"
                        android:textSize = "14sp"/>
                    <EditText
                        android:id="@+id/user_phone_et"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="휴대폰 번호"
                        android:textSize="14sp"
                        android:textColor="#252525"
                        app:layout_constraintTop_toTopOf="@id/user_phone_part"
                        app:layout_constraintStart_toEndOf="@id/telecom_spinner"
                        android:layout_marginLeft="15dp"
                        app:layout_constraintBottom_toBottomOf="@id/user_phone_part"/>
                    <Button
                        android:id="@+id/phone_certification_btn"
                        android:layout_width="72dp"
                        android:layout_height="30dp"
                        android:text="인증요청"
                        android:textColor="#252525"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="@id/user_phone_part"
                        app:layout_constraintEnd_toEndOf="@id/user_phone_part"
                        app:layout_constraintBottom_toBottomOf="@id/user_phone_part"
                        android:background="@drawable/join_gray_rounded_corner"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/border3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/user_phone_part"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:background="@drawable/gray_bottom_border"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="타인의 개인정보를 도용하여 가입한 경우, 서비스 이용 제한 및 법적 제재를 받으실 수 있습니다."
                    android:textColor="#252525"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@id/border3"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:layout_marginTop="7.5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/next_btn"
                android:text="다음"
                android:textSize="16sp"
                android:textColor="#252525"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:layout_constraintTop_toBottomOf="@id/user_info_part"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="42dp"
                android:background="@drawable/join_gray_rounded_corner"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
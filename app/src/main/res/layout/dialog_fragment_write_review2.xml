<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_border_8dp_ffffff"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="#252525"
        android:text="나가기 선택시,\n작성된 후기는 저장되지 않습니다."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/cancel_button"
            android:text="나가기"
            android:background="@drawable/rounded_border_4dp_e4e4e4"
            android:width="130dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#252525"
            app:layout_constraintTop_toTopOf="@id/button_part"
            app:layout_constraintBottom_toBottomOf="@id/button_part"
            app:layout_constraintStart_toStartOf="@id/button_part" />
        <Button
            android:id="@+id/write_btn"
            android:text="후기 마저 쓰기"
            android:width="130dp"
            android:background="@drawable/rounded_border_4dp_fff1a6"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#252525"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/button_part"
            app:layout_constraintStart_toEndOf="@+id/cancel_button"
            app:layout_constraintBottom_toBottomOf="@id/button_part"
            app:layout_constraintEnd_toEndOf="@id/button_part" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_part"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#252525"
        app:layout_constraintHeight_percent="0.1"
        android:paddingBottom="15dp">
        <ImageButton
            android:id="@+id/back_btn"
            android:clickable="true"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:background="@drawable/perform_info_back_icon"
            app:layout_constraintStart_toStartOf="@id/top_part"
            app:layout_constraintBottom_toBottomOf="@id/top_part"
            android:layout_marginLeft="22dp"/>
        <TextView
            android:text="후기 쓰기"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/top_part"
            app:layout_constraintBottom_toBottomOf="@id/top_part"
            app:layout_constraintEnd_toEndOf="@id/top_part" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.9"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_part"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.9"
            android:layout_marginTop="47dp"
            android:paddingRight="43dp"
            android:paddingLeft="43dp"
            android:paddingBottom="40dp">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공연관람을 인증하고, 후기를 남겨주세요."
                app:layout_constraintTop_toTopOf="@id/scroll_part"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintEnd_toEndOf="@id/scroll_part"
                android:textSize="16sp"
                android:textColor="#252525"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textView1"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintEnd_toEndOf="@id/scroll_part"
                android:layout_marginTop="32dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ticket_btn"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    app:layout_constraintTop_toTopOf="@id/btn_part"
                    app:layout_constraintEnd_toEndOf="@id/btn_part"
                    app:layout_constraintStart_toStartOf="@id/btn_part"
                    android:background="@drawable/rounded_border_4dp_cccccc"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <ImageView
                        android:id="@+id/ticket_icon"
                        android:src="@drawable/ticket_icon_yellow"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="26dp"
                        app:layout_constraintTop_toTopOf="@id/ticket_btn"
                        app:layout_constraintBottom_toBottomOf="@id/ticket_btn"
                        app:layout_constraintStart_toStartOf="@id/ticket_btn" />
                    <TextView
                        android:text="티켓 사진"
                        android:textSize="14sp"
                        android:textColor="#252525"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/ticket_btn"
                        app:layout_constraintEnd_toEndOf="@id/ticket_btn"
                        app:layout_constraintTop_toTopOf="@id/ticket_btn"
                        app:layout_constraintBottom_toBottomOf="@id/ticket_btn"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/receipt_btn"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    app:layout_constraintTop_toBottomOf="@id/ticket_btn"
                    app:layout_constraintStart_toStartOf="@id/btn_part"
                    app:layout_constraintEnd_toEndOf="@id/btn_part"
                    android:background="@drawable/rounded_border_4dp_cccccc"
                    android:layout_marginTop="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <ImageView
                        android:id="@+id/receipt_icon"
                        android:src="@drawable/receipt_icon_yellow"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="26dp"
                        app:layout_constraintTop_toTopOf="@id/receipt_btn"
                        app:layout_constraintBottom_toBottomOf="@id/receipt_btn"
                        app:layout_constraintStart_toStartOf="@id/receipt_btn" />
                    <TextView
                        android:text="예매 내역"
                        android:textSize="14sp"
                        android:textColor="#252525"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/receipt_btn"
                        app:layout_constraintEnd_toEndOf="@id/receipt_btn"
                        app:layout_constraintTop_toTopOf="@id/receipt_btn"
                        app:layout_constraintBottom_toBottomOf="@id/receipt_btn"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/etc_btn"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    app:layout_constraintTop_toBottomOf="@id/receipt_btn"
                    app:layout_constraintStart_toStartOf="@id/btn_part"
                    app:layout_constraintEnd_toEndOf="@id/btn_part"
                    android:background="@drawable/rounded_border_4dp_cccccc"
                    android:layout_marginTop="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <ImageView
                        android:id="@+id/etc_icon"
                        android:src="@drawable/camera_icon_yellow"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="26dp"
                        app:layout_constraintTop_toTopOf="@id/etc_btn"
                        app:layout_constraintBottom_toBottomOf="@id/etc_btn"
                        app:layout_constraintStart_toStartOf="@id/etc_btn" />
                    <TextView
                        android:text="기타 사진"
                        android:textSize="14sp"
                        android:textColor="#252525"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/etc_btn"
                        app:layout_constraintEnd_toEndOf="@id/etc_btn"
                        app:layout_constraintTop_toTopOf="@id/etc_btn"
                        app:layout_constraintBottom_toBottomOf="@id/etc_btn"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="26dp"
                        android:src="@drawable/write_review_notice_icon"
                        app:layout_constraintEnd_toEndOf="@id/etc_btn"
                        app:layout_constraintTop_toTopOf="@id/etc_btn"
                        app:layout_constraintBottom_toBottomOf="@id/etc_btn"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/btn_part"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintEnd_toEndOf="@id/scroll_part"
                android:layout_marginTop="38dp">
                <ImageView
                    android:id="@+id/notice_icon"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@drawable/write_review_notice_icon"
                    app:layout_constraintTop_toTopOf="@id/info_part"
                    app:layout_constraintStart_toStartOf="@id/info_part"/>
                <TextView
                    android:id="@+id/info_tv"
                    android:text="인증사진은 검수를 위한 자료이며, 타사용자에게는 노출되지 \n않습니다. (인증과 무관한 사진일 경우 업로드 되지 않습니다.)"
                    android:textColor="#252525"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    app:layout_constraintTop_toTopOf="@id/info_part"
                    app:layout_constraintStart_toEndOf="@id/notice_icon"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/save_btn"
                android:background="@drawable/rounded_border_4dp_e4e4e4"
                android:text="인증하기"
                android:textColor="#252525"
                android:textSize="12sp"
                android:paddingLeft="42dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingRight="42dp"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                app:layout_constraintTop_toBottomOf="@id/info_part"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintEnd_toEndOf="@id/scroll_part"
                android:layout_marginTop="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
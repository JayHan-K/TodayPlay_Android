<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gray_bottom_border"
    android:paddingTop="24dp"
    android:paddingBottom="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comment_top_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/rcm_btn"
            android:background="@drawable/rounded_border_4dp_979797"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:text="답글"
            android:textSize="12sp"
            android:textColor="#9d9d9d"
            app:layout_constraintEnd_toEndOf="@id/comment_top_part"
            app:layout_constraintTop_toTopOf="@id/comment_top_part"
            app:layout_constraintBottom_toBottomOf="@id/comment_top_part"/>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/comment_user_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/profile"
            app:civ_border_width="0dp"
            app:layout_constraintTop_toTopOf="@id/comment_top_part"
            app:layout_constraintBottom_toBottomOf="@id/comment_top_part"
            app:layout_constraintStart_toStartOf="@id/comment_top_part">
        </com.mikhaellopez.circularimageview.CircularImageView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_thumb_part"
            android:layout_width="150dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@id/comment_top_part"
            app:layout_constraintStart_toEndOf="@id/comment_user_iv"
            app:layout_constraintBottom_toBottomOf="@id/comment_top_part"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제인"
                android:textSize="12sp"
                android:textColor="#252525"
                app:layout_constraintTop_toTopOf="@id/user_thumb_part"
                app:layout_constraintBottom_toBottomOf="@id/user_thumb_part"
                app:layout_constraintStart_toStartOf="@id/user_thumb_part"/>
            <TextView
                android:id="@+id/comment_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.10.23 작성"
                android:textSize="10sp"
                android:textColor="#252525"
                app:layout_constraintTop_toTopOf="@id/user_thumb_part"
                app:layout_constraintBottom_toBottomOf="@id/user_thumb_part"
                app:layout_constraintStart_toEndOf="@id/user_name_tv"
                android:layout_marginLeft="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/comment_tv"
        android:text="꿀팁 공유 감사합니다!\n2층에서는 샹들리에 떨어지는게 잘 안 보이나요?"
        android:textSize="12sp"
        android:textColor="#252525"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comment_top_part"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recomment_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comment_tv"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
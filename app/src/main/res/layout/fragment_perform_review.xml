<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statics_part"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/review_part">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/statics_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="34dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/review_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/review_part"
            app:layout_constraintEnd_toEndOf="@id/review_part"
            app:layout_constraintTop_toTopOf="@id/review_part"
            app:layout_constraintBottom_toTopOf="@id/more_rv_btn">
        </androidx.recyclerview.widget.RecyclerView>
        <Button
            android:id="@+id/more_rv_btn"
            android:drawableLeft="@drawable/icon_more"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="48개의 후기 더 보기"
            android:elevation="2dp"
            android:background="@drawable/review_item_background"
            android:textSize="12sp"
            android:textColor="#ffffff"
            app:layout_constraintTop_toBottomOf="@id/review_rv"
            app:layout_constraintBottom_toBottomOf="@id/review_part"
            app:layout_constraintStart_toStartOf="@id/review_part"
            app:layout_constraintEnd_toEndOf="@id/review_part"
            android:layout_marginTop="2dp">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/write_rv_btn"
        android:background="@drawable/icon_writing_editor"
        android:layout_alignParentBottom="true"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_alignParentRight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="30dp">

    </Button>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/statics_part"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/review_part"
                android:layout_marginBottom="30dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/satisfied_ratio_part"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toTopOf="@id/statics_part"
                    app:layout_constraintStart_toStartOf="@id/statics_part">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ratio_text_part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/satisfied_ratio_part"
                        app:layout_constraintStart_toStartOf="@id/satisfied_ratio_part">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="만족도 비율"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            app:layout_constraintTop_toTopOf="@id/ratio_text_part"
                            app:layout_constraintStart_toStartOf="@id/ratio_text_part"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/chart_text_part"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/ratio_text_part"
                            app:layout_constraintEnd_toEndOf="@id/ratio_text_part">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="평균 만족도"
                                android:textSize="10sp"
                                android:textColor="#ffffff"
                                android:layout_marginRight="14dp"
                                app:layout_constraintTop_toTopOf="@id/chart_text_part"
                                app:layout_constraintEnd_toStartOf="@id/satisfy_tv"/>
                            <TextView
                                android:id="@+id/satisfy_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이 공연 만족도"
                                android:textSize="10sp"
                                android:textColor="#ffffff"
                                app:layout_constraintTop_toTopOf="@id/chart_text_part"
                                app:layout_constraintEnd_toEndOf="@id/chart_text_part"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bar_chart_cardView"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_marginTop="12dp"
                        app:cardBackgroundColor="#252525"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="8dp"
                        app:layout_constraintTop_toBottomOf="@id/ratio_text_part"
                        app:layout_constraintStart_toStartOf="@id/satisfied_ratio_part">
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/satisfy_ratio_barChart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/partition"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:src="@drawable/perform_review_partition"
                app:layout_constraintTop_toBottomOf="@id/statics_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/review_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/partition"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="34dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/review_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/review_part"
                    app:layout_constraintEnd_toEndOf="@id/review_part"
                    app:layout_constraintTop_toTopOf="@id/review_part"
                    app:layout_constraintBottom_toTopOf="@id/more_rv_btn">
                </androidx.recyclerview.widget.RecyclerView>
                <Button
                    android:id="@+id/more_rv_btn"
                    android:drawableLeft="@drawable/review_more_btn"
                    android:drawablePadding="10dp"
                    android:paddingLeft="98dp"
                    android:gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="48개의 후기 더 보기"
                    android:elevation="2dp"
                    android:background="@drawable/review_item_background"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    app:layout_constraintTop_toBottomOf="@id/review_rv"
                    app:layout_constraintBottom_toBottomOf="@id/review_part"
                    app:layout_constraintStart_toStartOf="@id/review_part"
                    app:layout_constraintEnd_toEndOf="@id/review_part"
                    android:layout_marginTop="2dp">
                </Button>
            </androidx.constraintlayout.widget.ConstraintLayout>

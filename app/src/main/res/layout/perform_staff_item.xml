<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="74dp"
    android:layout_height="108dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525"
    android:layout_marginRight="6dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/staff_iv"
        android:src="@drawable/editor_profile_4"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:riv_corner_radius="6dp"
        android:layout_width="match_parent"
        android:layout_height="83.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/staff_iv"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/staff_job_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연출"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:layout_marginTop="8.3dp"
            app:layout_constraintTop_toTopOf="@id/text_part"
            app:layout_constraintStart_toStartOf="@id/text_part"/>
        <TextView
            android:id="@+id/staff_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이현규"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_marginTop="6.3dp"
            app:layout_constraintTop_toTopOf="@id/text_part"
            app:layout_constraintStart_toEndOf="@id/staff_job_tv"
            android:layout_marginLeft="6dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525"
    android:layout_marginRight="10dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/staff_iv"
        android:src="@drawable/editor_profile_4"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:riv_corner_radius="6dp"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/staff_job_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연출"
            android:textSize="10sp"
            android:textColor="#ffffff"
            app:layout_constraintTop_toBottomOf="@id/staff_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/staff_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이현규"
            android:textSize="12sp"
            android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/staff_job_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
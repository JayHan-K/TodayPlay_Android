<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_part"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#252525"
        app:layout_constraintHeight_percent="0.1"
        android:paddingBottom="15dp">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:background="@drawable/perform_info_back_icon"
            app:layout_constraintStart_toStartOf="@id/top_part"
            app:layout_constraintBottom_toBottomOf="@id/top_part"
            android:layout_marginLeft="22dp"/>
        <TextView
            android:text="후기 전체보기"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/top_part"
            app:layout_constraintBottom_toBottomOf="@id/top_part"
            app:layout_constraintEnd_toEndOf="@id/top_part" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.9">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_part"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.9">
            <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/poster_part"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="@id/scroll_part"
        app:layout_constraintStart_toStartOf="@id/scroll_part"
        app:layout_constraintBottom_toTopOf="@id/poster_part"
        app:layout_constraintEnd_toEndOf="@id/scroll_part"
        android:paddingTop="20dp"
        android:paddingBottom="28dp"
        android:layout_marginBottom="16dp"
        android:background="#252525"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/perform_iv"
            android:layout_width="162dp"
            android:layout_height="202dp"
            android:src="@drawable/poster_sample16"
            app:layout_constraintStart_toStartOf="@id/poster_part"
            app:layout_constraintTop_toTopOf="@id/poster_part"
            android:layout_marginLeft="25dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/poster_text_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/poster_part"
            app:layout_constraintStart_toEndOf="@id/perform_iv"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/perform_title_tv"
                android:text="연극 라이어"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/poster_text_part"
                app:layout_constraintStart_toStartOf="@id/poster_text_part"/>
            <TextView
                android:id="@+id/perform_date_tv"
                android:text="2011, 90분"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/perform_title_tv"
                app:layout_constraintStart_toStartOf="@id/poster_text_part"
                android:layout_marginTop="9dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/director_part"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/perform_date_tv"
                        app:layout_constraintStart_toStartOf="@id/poster_text_part"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:id="@+id/director"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="연출"
                            app:layout_constraintTop_toTopOf="@id/director_part"
                            app:layout_constraintStart_toStartOf="@id/director_part"/>
                        <TextView
                            android:text="이윤택 (문화게릴라)"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/director_part"
                            app:layout_constraintStart_toEndOf="@id/director"
                            android:layout_marginLeft="18dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/actor_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/director_part"
                app:layout_constraintStart_toStartOf="@id/poster_text_part">
                <TextView
                android:id="@+id/actor"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출연진"
                app:layout_constraintTop_toTopOf="@id/actor_part"
                app:layout_constraintStart_toStartOf="@id/actor_part"/>
                <TextView
                    android:text="노심동, 조정우, 민 ..."
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/actor_part"
                    app:layout_constraintStart_toEndOf="@id/actor"
                    android:layout_marginLeft="18dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/perform_review_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/poster_part"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">
            </androidx.recyclerview.widget.RecyclerView>
            <Button
                android:id="@+id/write_review_btn"
                android:background="@drawable/perform_review_cat_icon"
                android:layout_alignParentBottom="true"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_alignParentRight="true"
                app:layout_constraintEnd_toEndOf="@id/scroll_part"
                app:layout_constraintBottom_toBottomOf="@id/scroll_part"
                android:layout_marginRight="30dp">
            </Button>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintEnd_toEndOf="@id/scroll_part"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/star1_btn"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@drawable/write_review_star_off_icon"

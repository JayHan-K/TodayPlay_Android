            <RatingBar
                android:id="@+id/star_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/notice_tv"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintEnd_toEndOf="@id/scroll_part"
                android:layout_marginTop="30dp"
                android:stepSize="1"
                android:rating="0"
                android:numStars="5"
                style="@style/starRatingBar">
            </RatingBar>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/star_rb"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintEnd_toEndOf="@id/scroll_part"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/notice_icon"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@drawable/write_review_notice_icon"
                    app:layout_constraintTop_toTopOf="@id/info_part"
                    app:layout_constraintBottom_toBottomOf="@id/info_part"
                    app:layout_constraintStart_toStartOf="@id/info_part"/>
                <TextView
                    android:id="@+id/info_tv"
                    android:text="만족도는 후기에 공개되지 않습니다."
                    android:textColor="#252525"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintTop_toTopOf="@id/info_part"
                    app:layout_constraintBottom_toBottomOf="@id/info_part"
                    app:layout_constraintStart_toEndOf="@id/notice_icon"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/save_btn"
                android:background="@drawable/round_border_4dp_fefefe"
                android:text="후기 등록"
                android:textColor="#252525"
                android:textSize="12sp"
                android:paddingLeft="42dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingRight="42dp"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                app:layout_constraintTop_toBottomOf="@id/info_part"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintEnd_toEndOf="@id/scroll_part"
                android:layout_marginTop="47dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
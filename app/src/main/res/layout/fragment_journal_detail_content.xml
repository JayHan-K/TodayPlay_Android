<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_journal_detail">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_part"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            app:layout_constraintTop_toTopOf="@id/container"
            app:layout_constraintStart_toStartOf="@id/container">
            <WebView
                android:id="@+id/journal_wv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/scroll_part"
                app:layout_constraintStart_toStartOf="@id/scroll_part"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/gray_bottom_border"
                android:id="@+id/bookmark_comment_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintTop_toBottomOf="@id/journal_wv"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:paddingBottom="13.5dp">
                <ImageView
                    android:id="@+id/bookmark_icon"
                    android:src="@drawable/journal_bookmark_small_yellow"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    app:layout_constraintTop_toTopOf="@id/bookmark_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/bookmark_comment_part"
                    app:layout_constraintStart_toStartOf="@id/bookmark_comment_part"/>
                <TextView
                    android:id="@+id/num_bookmarks_tv2"
                    android:text="23"
                    android:textColor="#252525"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    app:layout_constraintStart_toEndOf="@id/bookmark_icon"
                    app:layout_constraintTop_toTopOf="@id/bookmark_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/bookmark_comment_part"/>
                <ImageView
                    android:id="@+id/comment_icon"
                    android:src="@drawable/journal_comment_small_yellow"
                    android:layout_width="12dp"
                    android:layout_height="12.6dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/num_bookmarks_tv2"
                    app:layout_constraintTop_toTopOf="@id/bookmark_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/bookmark_comment_part"/>
                <TextView
                    android:id="@+id/num_comment"
                    android:text="23"
                    android:textSize="12sp"
                    android:textColor="#252525"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/comment_icon"
                    app:layout_constraintTop_toTopOf="@id/bookmark_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/bookmark_comment_part"
                    android:layout_marginLeft="6dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/write_comment_part"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintTop_toBottomOf="@id/bookmark_comment_part"
                android:layout_marginTop="19.5dp">
                <EditText
                    android:id="@+id/write_comment_et"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.8"
                    android:layout_height="50dp"
                    android:background="@drawable/round_border_4dp_fefefe"
                    app:layout_constraintStart_toStartOf="@id/write_comment_part"
                    app:layout_constraintTop_toTopOf="@id/write_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/write_comment_part" />
                <Button
                    android:id="@+id/comment_save_btn"
                    android:text="등록"
                    android:textColor="#252525"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_border_4dp_ffe34e"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="@id/write_comment_part"
                    app:layout_constraintTop_toTopOf="@id/write_comment_part"
                    app:layout_constraintBottom_toBottomOf="@id/write_comment_part"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/journal_comment_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintTop_toBottomOf="@id/write_comment_part">
            </androidx.recyclerview.widget.RecyclerView>
            <Button
                android:id="@+id/more_comment_btn"
                android:text="+  3개의 댓글 더 보기"
                android:textSize="14sp"
                android:textColor="#252525"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                app:layout_constraintEnd_toEndOf="@id/scroll_part"
                app:layout_constraintTop_toBottomOf="@id/journal_comment_rv"
                android:layout_marginTop="20dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_part"
                android:background="#252525"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/more_comment_btn"
                app:layout_constraintStart_toStartOf="@id/scroll_part"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">
                <TextView
                    android:id="@+id/recommend_journal_tv"
                    android:text="이런 저널은 어떠신가요?"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/bottom_part"
                    app:layout_constraintStart_toStartOf="@id/bottom_part"
                    android:layout_marginLeft="24dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommend_journal_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/bottom_part"
                    app:layout_constraintTop_toBottomOf="@id/recommend_journal_tv"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="6.8dp"
                    android:paddingRight="6.8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:id="@+id/bookmark_btn"
            android:clickable="true"
            android:background="@drawable/journal_bookmark_icon_yellow"
            android:layout_width="26dp"
            android:layout_height="42.3dp"
            android:layout_marginRight="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:layout_constraintTop_toTopOf="@id/container"
            app:layout_constraintEnd_toEndOf="@id/container"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
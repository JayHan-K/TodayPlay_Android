<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="36dp"
    android:paddingBottom="52dp">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_level_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="17dp"
                    android:src="@drawable/join_level2_ver2"
                    app:layout_constraintTop_toTopOf="@id/join_level_part"
                    app:layout_constraintBottom_toBottomOf="@id/join_level_part"
                    app:layout_constraintStart_toStartOf="@id/join_level_part"
                    app:layout_constraintEnd_toEndOf="@id/join_level_part"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/user_profile_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/join_default_profile"
                app:layout_constraintTop_toBottomOf="@id/join_level_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerCrop"
                android:layout_marginTop="30dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nickname_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_bottom_border"
                app:layout_constraintTop_toBottomOf="@id/user_profile_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="26dp"
                android:paddingRight="5dp"
                android:paddingLeft="6dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <EditText
                    android:id="@+id/user_nickname_et"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    app:layout_constraintTop_toTopOf="@id/nickname_part"
                    app:layout_constraintStart_toStartOf="@id/nickname_part"
                    app:layout_constraintBottom_toBottomOf="@id/nickname_part"
                    android:hint="닉네임"
                    android:textColor="#252525"
                    android:textSize="14sp"/>
                <Button
                    android:id="@+id/nickname_check_btn"
                    android:layout_width="72dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="@id/nickname_part"
                    app:layout_constraintEnd_toEndOf="@id/nickname_part"
                    app:layout_constraintBottom_toBottomOf="@id/nickname_part"
                    android:text="중복확인"
                    android:background="@drawable/join_gray_rounded_corner"
                    android:textSize="12sp"
                    android:textColor="#252525"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:text="8자 이하 한글, 영문"
                android:textColor="#252525"
                android:textSize="12sp"
                android:id="@+id/nickname_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/nickname_part"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="3.5dp"
                android:layout_marginLeft="6dp"/>
            <Button
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:text="약관 동의하고 시작"
                android:textSize="16sp"
                android:textColor="#252525"
                android:background="@drawable/join_gray_rounded_corner"
                app:layout_constraintTop_toBottomOf="@id/nickname_state_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>
            <Button
                android:id="@+id/total_certification_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관 전체 보기"
                android:textColor="#252525"
                android:textSize="12sp"
                android:background="@null"
                app:layout_constraintTop_toBottomOf="@id/next_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="#ffffff"
    android:paddingTop="36dp"
    android:paddingBottom="52dp">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_level_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="17dp"
                    android:src="@drawable/join_level1_ver2"
                    app:layout_constraintTop_toTopOf="@id/join_level_part"
                    app:layout_constraintBottom_toBottomOf="@id/join_level_part"
                    app:layout_constraintStart_toStartOf="@id/join_level_part"
                    app:layout_constraintEnd_toEndOf="@id/join_level_part"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_info_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/join_level_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="43dp">
                <EditText
                    android:id="@+id/join_user_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#252525"
                    android:background="@null"
                    android:hint="이름  실명 입력"
                    android:layout_marginLeft="6dp"
                    app:layout_constraintTop_toTopOf="@id/user_info_part"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/border1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/join_user_name_et"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:background="@drawable/gray_bottom_border"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/join_user_birth_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColor="#252525"
                    android:hint="생년월일  8자리로"
                    android:layout_marginLeft="6dp"
                    app:layout_constraintTop_toBottomOf="@id/border1"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:layout_marginTop="11dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/border2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/join_user_birth_et"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:background="@drawable/gray_bottom_border"
                    android:layout_marginTop="10dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/user_phone_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/border2"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:layout_marginTop="5dp">
                    <EditText
                        android:id="@+id/user_phone_et"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="휴대전화  - 없이 숫자만"
                        android:textSize="14sp"
                        android:textColor="#252525"
                        app:layout_constraintTop_toTopOf="@id/user_phone_part"
                        app:layout_constraintStart_toStartOf="@id/user_phone_part"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintBottom_toBottomOf="@id/user_phone_part"/>
                    <Button
                        android:id="@+id/phone_certification_btn"
                        android:layout_width="94dp"
                        android:layout_height="30dp"
                        android:text="인증 번호 발송"
                        android:textColor="#252525"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="@id/user_phone_part"
                        app:layout_constraintEnd_toEndOf="@id/user_phone_part"
                        app:layout_constraintBottom_toBottomOf="@id/user_phone_part"
                        android:background="@drawable/join_gray_rounded_corner"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/border3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/user_phone_part"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:background="@drawable/gray_bottom_border"
                    android:layout_marginTop="3dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/identification_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/border3"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:layout_marginTop="5dp">
                    <EditText
                        android:id="@+id/identifi_num_et"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="인증번호 입력"
                        android:textSize="14sp"
                        android:textColor="#252525"
                        app:layout_constraintTop_toTopOf="@id/identification_part"
                        app:layout_constraintStart_toStartOf="@id/identification_part"
                        android:layout_marginLeft="6dp"
                        app:layout_constraintBottom_toBottomOf="@id/identification_part"/>
                    <Button
                        android:id="@+id/check_btn"
                        android:layout_width="94dp"
                        android:layout_height="30dp"
                        android:text="인증 확인"
                        android:textColor="#252525"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="@id/identification_part"
                        app:layout_constraintEnd_toEndOf="@id/identification_part"
                        app:layout_constraintBottom_toBottomOf="@id/identification_part"
                        android:background="@drawable/join_gray_rounded_corner"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/border4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/identification_part"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:background="@drawable/gray_bottom_border"
                    android:layout_marginTop="3dp"/>
                <EditText
                    android:id="@+id/job_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColor="#252525"
                    android:hint="직업"
                    android:layout_marginLeft="6dp"
                    app:layout_constraintTop_toBottomOf="@id/border4"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:layout_marginTop="11dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/border5"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/job_et"
                    app:layout_constraintStart_toStartOf="@id/user_info_part"
                    android:background="@drawable/gray_bottom_border"
                    android:layout_marginTop="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/next_btn"
                android:text="다음"
                android:textSize="16sp"
                android:textColor="#252525"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:layout_constraintTop_toBottomOf="@id/user_info_part"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="11.5dp"
                android:background="@drawable/join_gray_rounded_corner"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
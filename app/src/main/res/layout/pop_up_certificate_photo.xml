<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_border_8dp_ffffff"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingBottom="30dp">
    <TextView
        android:id="@+id/question_tv"
        android:text="공연은 재미있게 보셨나요?\n인증 사진을 첨부하고 후기를 남겨주세요."
        android:textSize="14sp"
        android:textColor="#252525"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/question_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="26dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ticket_btn"
            android:layout_width="86dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="@id/btn_part"
            app:layout_constraintStart_toStartOf="@id/btn_part"
            android:background="@drawable/rounded_border_4dp_cccccc"
            android:paddingTop="16dp"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/ticket_icon"
                android:src="@drawable/ticket_icon_yellow"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="@id/ticket_btn"
                app:layout_constraintStart_toStartOf="@id/ticket_btn"
                app:layout_constraintEnd_toEndOf="@id/ticket_btn"/>
            <TextView
                android:text="티켓 사진"
                android:textSize="14sp"
                android:textColor="#252525"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/ticket_btn"
                app:layout_constraintEnd_toEndOf="@id/ticket_btn"
                app:layout_constraintBottom_toBottomOf="@id/ticket_btn"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/receipt_btn"
            android:layout_width="86dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="@id/btn_part"
            app:layout_constraintStart_toEndOf="@id/ticket_btn"
            app:layout_constraintEnd_toStartOf="@id/etc_btn"
            android:background="@drawable/rounded_border_4dp_cccccc"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/receipt_icon"
                android:src="@drawable/receipt_icon_yellow"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="@id/receipt_btn"
                app:layout_constraintStart_toStartOf="@id/receipt_btn"
                app:layout_constraintEnd_toEndOf="@id/receipt_btn"/>
            <TextView
                android:text="구매 영수증"
                android:textSize="14sp"
                android:textColor="#252525"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/receipt_btn"
                app:layout_constraintEnd_toEndOf="@id/receipt_btn"
                app:layout_constraintBottom_toBottomOf="@id/receipt_btn"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/etc_btn"
            android:layout_width="86dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="@id/btn_part"
            app:layout_constraintEnd_toEndOf="@id/btn_part"
            android:background="@drawable/rounded_border_4dp_cccccc"
            android:layout_marginLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/camera_icon"
                android:src="@drawable/camera_icon_yellow"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="@id/etc_btn"
                app:layout_constraintStart_toStartOf="@id/etc_btn"
                app:layout_constraintEnd_toEndOf="@id/etc_btn"/>
            <TextView
                android:text="기타 사진"
                android:textSize="14sp"
                android:textColor="#252525"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/etc_btn"
                app:layout_constraintEnd_toEndOf="@id/etc_btn"
                app:layout_constraintBottom_toBottomOf="@id/etc_btn"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notice_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp">
        <ImageView
            android:id="@+id/notice_icon"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/write_review_notice_icon"
            app:layout_constraintStart_toStartOf="@id/notice_part"
            app:layout_constraintTop_toTopOf="@id/notice_part"/>
        <TextView
            android:id="@+id/notice_tv"
            android:text="인증 사진은 타 유저에게 절대 노출되지 않으며 관리자가 실관람 후기임을 확인한 후에 즉각 폐기됩니다."
            android:textColor="#252525"
            android:textSize="10sp"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.92"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/notice_icon"
            app:layout_constraintTop_toTopOf="@id/notice_part"
            android:layout_marginLeft="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/upload_btn"
        android:text="사진 등록"
        android:background="@drawable/rounded_border_4dp_ffe34e"
        android:paddingLeft="20dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#252525"
        app:layout_constraintTop_toBottomOf="@id/notice_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
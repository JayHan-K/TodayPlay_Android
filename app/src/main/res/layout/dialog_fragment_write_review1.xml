<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_border_8dp_ffffff"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingBottom="30dp">
    <TextView
        android:id="@+id/textView1"
        android:text="오늘의 공연은 '실관람객'의 Real한 후기를 \n모으기 위해 사진을 통한 인증 단계를 \n필수적으로 거치고 있습니다."
        android:textSize="12sp"
        android:textColor="#252525"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff1a6"
        android:textSize="14sp"
        android:textColor="#252525"
        android:layout_marginTop="14dp"
        android:text="실관람객임을 인증할 수 있는 사진이"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#252525"
        android:text="있는지 확인해주세요!"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/cancel_button"
            android:text="취소"
            android:background="@drawable/rounded_border_4dp_e4e4e4"
            android:width="130dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#252525"
            app:layout_constraintTop_toTopOf="@id/button_part"
            app:layout_constraintBottom_toBottomOf="@id/button_part"
            app:layout_constraintStart_toStartOf="@id/button_part" />
        <Button
            android:id="@+id/write_btn"
            android:text="리뷰 쓰기"
            android:width="130dp"
            android:background="@drawable/rounded_border_4dp_fff1a6"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#252525"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/button_part"
            app:layout_constraintStart_toEndOf="@+id/cancel_button"
            app:layout_constraintBottom_toBottomOf="@id/button_part"
            app:layout_constraintEnd_toEndOf="@id/button_part" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
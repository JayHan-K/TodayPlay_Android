<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/poster_part"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/poster_part"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="43dp"
                android:paddingBottom="1dp"
                android:layout_marginBottom="16dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/title_ranking_part"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/poster_part"
                    app:layout_constraintStart_toStartOf="@id/poster_part"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="22dp">
                    <TextView
                        android:id="@+id/perfrom_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="연극 라이어"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/title_ranking_part"
                        app:layout_constraintStart_toStartOf="@id/title_ranking_part"
                        app:layout_constraintEnd_toEndOf="@id/title_ranking_part"
                        app:layout_constraintBottom_toTopOf="@id/ranking_part"
                        android:layout_marginBottom="6dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ranking_part"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/perfrom_title_tv"
                        app:layout_constraintBottom_toBottomOf="@id/title_ranking_part"
                        app:layout_constraintStart_toStartOf="@id/title_ranking_part"
                        app:layout_constraintEnd_toEndOf="@id/title_ranking_part"
                        android:layout_marginTop="6dp">
                        <ImageView
                            android:id="@+id/heart_icon"
                            android:layout_width="13dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_heart_line"
                            app:layout_constraintTop_toTopOf="@id/ranking_part"
                            app:layout_constraintBottom_toBottomOf="@id/ranking_part"
                            app:layout_constraintRight_toLeftOf="@id/rangking_tv"
                            android:layout_marginRight="8dp"/>
                        <TextView
                            android:id="@+id/rangking_tv"
                            android:textColor="#fed702"
                            android:text="찜 랭킹 21위"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toRightOf="@id/heart_icon"
                            app:layout_constraintTop_toTopOf="@id/ranking_part"
                            app:layout_constraintBottom_toBottomOf="@id/ranking_part"
                            android:layout_marginLeft="8dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="16dp"
                    android:layout_height="17dp"
                    android:background="@drawable/icon_pre"
                    app:layout_constraintStart_toStartOf="@id/poster_part"
                    app:layout_constraintTop_toTopOf="@id/poster_part"
                    android:layout_marginLeft="22dp"/>
                <ImageView
                    android:id="@+id/perfrom_img"
                    android:layout_width="162dp"
                    android:layout_height="202dp"
                    android:src="@drawable/poster_sample16"
                    app:layout_constraintEnd_toEndOf="@id/poster_part"
                    app:layout_constraintTop_toTopOf="@id/poster_part"
                    app:layout_constraintBottom_toBottomOf="@id/poster_part"
                    android:layout_marginRight="25dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tag_part"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/poster_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tabLayout"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="25dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tag_rv"
                    android:overScrollMode="never"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintStart_toStartOf="@+id/tag_part"
                    app:layout_constraintTop_toTopOf="@id/tag_part"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorColor="#fed702"
                app:tabGravity="fill"
                app:tabSelectedTextColor="#fed702"
                app:tabTextColor="#ffffff"
                app:layout_constraintTop_toBottomOf="@id/tag_part"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/viewPager"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="25dp">
            </com.google.android.material.tabs.TabLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tabLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="25dp">
            </androidx.viewpager.widget.ViewPager>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>